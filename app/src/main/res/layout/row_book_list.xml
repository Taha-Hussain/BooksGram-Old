<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:layout_marginTop="10dp">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/row_book_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15sp"
        android:src="@drawable/shop"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/row_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. WhatsApp "
            android:textSize="17dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/row_book_publisher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WhatsApp Inc."/>

        <RatingBar
            android:id="@+id/row_book_ratingbar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="5"
            android:isIndicator="true"
            android:focusable="false"
            android:clickable="false"
            android:numStars="5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/row_book_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Free"
            android:gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:textColor="#bec420"
            />
    </LinearLayout>
</LinearLayout>